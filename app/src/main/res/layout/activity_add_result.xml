<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ash.pokertracker.AddResult">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultNameTextField"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="69dp"
        android:minWidth="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultTypeTextField"
        android:layout_marginTop="31dp"
        android:minWidth="150dp"
        android:layout_below="@+id/resultNameTextField"
        android:layout_alignRight="@+id/resultNameTextField"
        android:layout_alignEnd="@+id/resultNameTextField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultBuyInTextField"
        android:minWidth="150dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/resultTypeTextField"
        android:layout_alignEnd="@+id/resultTypeTextField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultReturnTextField"
        android:layout_marginTop="44dp"
        android:minWidth="150dp"
        android:layout_below="@+id/resultBuyInTextField"
        android:layout_alignRight="@+id/resultBuyInTextField"
        android:layout_alignEnd="@+id/resultBuyInTextField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/resultNameLabel"
        android:layout_alignTop="@+id/resultNameTextField"
        android:layout_toLeftOf="@+id/resultNameTextField"
        android:layout_toStartOf="@+id/resultNameTextField"
        android:minWidth="100dp"
        android:layout_alignBottom="@+id/resultNameTextField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:id="@+id/resultTypeLabel"
        android:minWidth="100dp"
        android:layout_alignTop="@+id/resultTypeTextField"
        android:layout_alignLeft="@+id/resultNameLabel"
        android:layout_alignStart="@+id/resultNameLabel"
        android:layout_alignBottom="@+id/resultTypeTextField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy In:"
        android:id="@+id/resultBuyInLabel"
        android:minWidth="100dp"
        android:layout_alignTop="@+id/resultBuyInTextField"
        android:layout_alignRight="@+id/resultTypeLabel"
        android:layout_alignEnd="@+id/resultTypeLabel"
        android:layout_above="@+id/resultReturnTextField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return:"
        android:id="@+id/resultReturnLabel"
        android:minWidth="100dp"
        android:layout_alignTop="@+id/resultReturnTextField"
        android:layout_toLeftOf="@+id/resultReturnTextField"
        android:layout_toStartOf="@+id/resultReturnTextField"
        android:layout_alignBottom="@+id/resultReturnTextField" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Result"
        android:id="@+id/addResultButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:onClick="addResultClicked" />

</RelativeLayout>
